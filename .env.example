# Docker Compose Configuration
COMPOSE_PROJECT_NAME=usecallmanager
MODE=dev  # dev or prod
DOMAIN=localhost

# TVS Configuration
TVS_PROTOCOL_PORT=2445
TVS_API_PORT=8081
TVS_TLS_CERT_FILE=/certs/tvs.pem
TVS_DATABASE_URL=sqlite:////var/lib/tvs/tvs.sqlite3
TVS_TIMEOUT=10
TVS_CLIENT_LIMIT=0
TVS_ALLOW_TLSV1=false
TVS_LOG_LEVEL=INFO

# CAPF Configuration
CAPF_PROTOCOL_PORT=3804
CAPF_API_PORT=8082
CAPF_TLS_CERT_FILE=/certs/capf.pem
CAPF_ISSUER_CERT_FILE=/certs/capf.pem
CAPF_DATABASE_URL=sqlite:////var/lib/capf/capf.sqlite3
CAPF_CERTIFICATES_DIR=/var/lib/capf/certificates
CAPF_TIMEOUT=10
CAPF_CLIENT_LIMIT=0
CAPF_VALIDITY_DAYS=365
CAPF_ALLOW_TLSV1=false
CAPF_LOG_LEVEL=INFO

# Frontend Configuration
FRONTEND_PORT=4321
